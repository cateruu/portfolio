---
import Skill from '../components/Skill.astro';
import { skills } from '../data/skills';
---

<section class='skills'>
  <h2 class='skills__header'>Skills</h2>
  <div class='skills__container'>
    {skills.map((skill) => <Skill icon={skill.icon} name={skill.name} />)}
  </div>
</section>

<style lang='scss'>
  .skills {
    margin-bottom: 120px;

    &__header {
      font-family: 'Syne Variable';
      font-size: 48px;
      font-weight: 700;
      color: var(--blue);
      margin-bottom: 30px;
      text-align: center;
    }

    &__container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 15px;
    }
  }
</style>

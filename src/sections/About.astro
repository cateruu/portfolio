  @use '../styles/mixins' as *;

  .about {
    display: flex;
    align-items: center;
    justify-content: space-between;

    &__header {
      font-size: 48px;
      font-weight: 700;
      width: fit-content;
      font-family: 'Syne Variable';
      background-color: #00c5ff;
      background-image: linear-gradient(130deg, #00c5ff, #e4acff);
      background-size: 100%;
      background-repeat: repeat;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      -moz-background-clip: text;
      -moz-text-fill-color: transparent;

      @include desktopM {
        font-size: 40px;
      }

      @include mobile {
        font-size: 30px;
      }
    }

    &__text {
      font-size: 20px;
      color: #fff;
      margin: 20px 0 40px 0;
      line-height: 28px;

      @include tablet {
        font-size: 18px;
      }

      @include mobile {
        font-size: 16px;
      }
    }

    &__header-secondary {
      color: #e4acff;
      font-size: 20px;
      margin-bottom: 15px;
      font-family: 'Syne Variable';

      @include mobile {
        font-size: 18px;
      }
    }

    &__image {
      height: 370px;

      @include tablet {
        height: 300px;
      }

      @include tabletS {
        height: 250px;
        margin: 50px 0 0 0;
        order: 2;
      }
    }


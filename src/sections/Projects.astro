---
import Project from '../components/Project.astro';
import { projects } from '../data/projects';
---

<section class='projects' id='projects'>
  {
    projects.map((project) => (
      <Project
        title={project.title}
        subTitle={project.subTitle}
        icon={project.icon}
        href={project.link}
      />
    ))
  }
  <img src='/devider.svg' class='devider' />
</section>

<style lang='scss'>
  @use '../styles/mixins' as *;

  .projects {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-top: 120px;

    @include mobileL {
      margin-top: 80px;
    }
  }

  .devider {
    width: 450px;
    transform: rotate(60deg);
    margin-top: -60px;
    align-self: center;

    @include tablet {
      width: 340px;
      margin-top: -30px;
    }

    @include mobileL {
      width: 400px;
    }

    @include mobile {
      margin-top: 10px;
      width: 230px;
      transform: rotate(30deg);
    }
  }
</style>

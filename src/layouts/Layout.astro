---
import '@fontsource-variable/syne';
import '@fontsource-variable/golos-text';
import Footer from '../sections/Footer.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content=`I'm a software developer with expertise in ReactJS, NextJS, TypeScript, and Go. Explore my portfolio to see examples of my work and learn more about my skills. I'm now excited to expand into backend development using Go and PostgreSQL. Let's collaborate and bring your ideas to life together!`
    />
    <meta
      name='keywords'
      content='software developer, ReactJS, NextJS, TypeScript, Redux, backend development, Node.js, Express.js, Go, Golang, PostgreSQL portfolio, projects, collaboration'
    />
    <meta name='author' content='Paweł Kromołowski' />
    <meta name='viewport' content='width=device-width' />

    <meta property='og:title' content='Paweł Kromołowski - Portfolio' />
    <meta
      property='og:description'
      content=`I'm a software developer with expertise in ReactJS, NextJS, TypeScript, and Go. Explore my portfolio to see examples of my work and learn more about my skills. Let's collaborate and bring your ideas to life together!`
    />
    <meta property='og:image' content='https://pawelkrml.com/og.png' />
    <meta property='og:url' content='https://pawelkrml.com' />

    <meta name='twitter:card' content='summary_large_image' />
    <meta name='twitter:site' content='@catertwt' />
    <meta name='twitter:title' content='Paweł Kromołowski- Portfolio' />
    <meta
      name='twitter:description'
      content=`I'm a software developer with expertise in ReactJS, NextJS, TypeScript, and Go. Explore my portfolio to see examples of my work and learn more about my skills. Let's collaborate and bring your ideas to life together!`
    />
    <meta name='twitter:image' content='https://pawelkrml.com/og.png' />

    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class='wrapper'>
      <slot />
      <Footer />
    </div>
  </body>
</html>

<script>
  import { SVGInjector } from '@tanem/svg-injector';
  import { inject } from '@vercel/analytics';

  SVGInjector(document.getElementsByClassName('inject'));
  inject();
</script>

<style is:global lang='scss'>
  @use '../styles/mixins' as *;

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  :root {
    --main: #f1b9ff;
    --secondary: #fff;
    --background: #161616;
    --red: #f07167;
    --blue: #00c5ff;
  }

  html {
    font-family: 'Golos Text Variable', sans-serif;
    background-color: #000;
    scroll-behavior: smooth;
  }

  a {
    border: none;
    outline: none;
    text-decoration: none;
  }

  body {
    padding: 0 40px;
    overflow-x: hidden;

    &::-webkit-scrollbar {
      width: 10px;
    }

    &::-webkit-scrollbar-thumb {
      background: #f1b9ff;
      border-radius: 3px;
    }

    @include tablet {
      padding: 0 60px;
    }

    @include mobile {
      padding: 0 20px;
    }
  }

  .wrapper {
    width: 1200px;
    margin: 0 auto;

    @include desktopS {
      width: 1100px;
    }

    @include tablet {
      width: 100%;
      margin: 0;
    }
  }

  svg {
    fill: currentColor;
  }
</style>

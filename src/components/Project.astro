---
interface Props {
  href: string;
  icon: string;
  title: string;
  subTitle: string;
  color: string;
}

const { href, icon, title, subTitle, color } = Astro.props;
---

<a
  href={href}
  target='_blank'
  class='project'
  style={{
    color: `${color}99`,
  }}
>
  <div
    class='project__background'
    style={{
      background: `padding-box linear-gradient(rgb(4 6 22), rgb(4 6 22)), border-box linear-gradient(${color}, ${color}80), rgba(255, 255, 255, 0.05)`,
    }}
  >
  </div>
  <div class='project__icon-wrapper'>
    <img
      src={icon}
      alt='icon'
      class='project__icon-wrapper__icon inject'
      style={{ fill: color }}
    />
    <div class='project__icon-wrapper__glow' style={{ backgroundColor: color }}>
    </div>
  </div>
  <div class='project__text'>
    <p class='project__text__title'>{title}</p>
    <p class='project__text__sub-title'>{subTitle}</p>
  </div>
  <div class='project__arrow-wrapper'>
    <img
      src='/icons/arrow.svg'
      alt='arrow icon'
      class='project__arrow-wrapper__icon inject'
      style={{ fill: color }}
    />
    <div
      class='project__arrow-wrapper__glow'
      style={{ backgroundColor: color }}
    >
    </div>
  </div>
</a>

<style lang='scss'>
  @use '../styles/mixins' as *;

  .project {
    width: 250px;
    height: 300px;
    border-radius: 12px;
    position: relative;
    padding-top: 25px;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: hidden;
    z-index: 0;
    backdrop-filter: blur(5px);
    transition: 0.3s ease-in-out;

    &:hover {
      box-shadow: 0 0 250px;
    }

    &:hover &__arrow-wrapper {
      bottom: 25px;

      &__icon {
        opacity: 0.6;
      }

      &__glow {
        filter: blur(20px);
      }
    }

    &__background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: 1px solid transparent;
      border-radius: 12px;
      opacity: 0.35;
      z-index: 1;
    }

    &__icon-wrapper {
      position: relative;
      height: 50px;
      width: 50px;
      display: grid;
      place-items: center;
      margin-bottom: 20px;
      z-index: 2;

      &__icon {
        position: relative;
        width: 50px;
        height: 50px;
        fill: currentColor;
      }

      &__glow {
        position: absolute;
        top: 0;
        left: 0;
        filter: blur(35px);
        width: 100%;
        height: 100%;
        border-radius: 100%;
        z-index: 0;
      }
    }

    &__text {
      text-align: center;
      font-family: 'Syne Variable';
      z-index: 2;

      &__title {
        font-size: 25px;
        font-weight: 600;
        color: #fff;
        margin-bottom: 9px;
      }

      &__sub-title {
        font-size: 14px;
        color: #8a8a8a;
        width: 120px;
      }
    }

    &__arrow-wrapper {
      position: absolute;
      width: 32px;
      height: 32px;
      bottom: 30px;
      z-index: 2;
      transition: 0.3s;

      &__icon {
        opacity: 0.3;
        transition: 0.3s ease-in-out;
      }

      &__glow {
        position: absolute;
        top: 0;
        left: 0;
        filter: blur(30px);
        width: 100%;
        height: 100%;
        border-radius: 100%;
        z-index: 0;
        transition: 0.3s ease-in-out;
      }
    }
  }
</style>

---
interface Props {
  href: string;
  icon: string;
  title: string;
  subTitle: string;
}

const { href, icon, title, subTitle } = Astro.props;
---

<a href={href} target='_blank' class='project'>
  <div class='project__icon-wrapper'>
    <img src={icon} alt='icon' class='project__icon-wrapper__icon' />
  </div>
  <div class='project__text'>
    <p class='project__text__title'>{title}</p>
    <p class='project__text__sub-title'>{subTitle}</p>
  </div>
  <img src='/icons/arrow.svg' alt='arrow right' class='project__arrow' />
</a>

<style lang='scss'>
  .project {
    width: 100%;
    height: 120px;
    background-color: var(--background);
    border-radius: 100px;
    display: flex;
    align-items: center;

    &__icon-wrapper {
      width: 120px;
      height: 120px;
      background-color: var(--main);
      border-radius: 100px;
      display: flex;
      justify-content: center;
      align-items: center;
      opacity: 0.99;

      &__icon {
        width: 50px;
      }
    }

    &__text {
      display: flex;
      flex-direction: column;
      margin-left: 50px;
      color: var(--secondary);

      &__title {
        font-size: 24px;
      }

      &__sub-title {
        font-size: 14px;
      }
    }

    &__arrow {
      width: 34px;
      margin: 0 30px 0 auto;
      fill: var(--main);
    }
  }
</style>
